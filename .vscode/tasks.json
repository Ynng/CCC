{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build file",
      "type": "shell",
      "command": "g++",
      "args": [
        "-g",
        "${file}",
        "-Wall",
        "-Wextra",
        "-pedantic",
        "-std=c++14",
        "-O2",
        "-Wshadow",
        "-Wformat=2",
        "-Wfloat-equal",
        "-Wconversion",
        "-Wlogical-op",
        "-Wshift-overflow=2",
        "-Wduplicated-cond",
        "-Wcast-qual",
        "-Wcast-align",
        "-D_GLIBCXX_DEBUG",
        "-D_GLIBCXX_DEBUG_PEDANTIC",
        "-D_FORTIFY_SOURCE=2",
        // "-fsanitize=undefined",
        "-fno-sanitize-recover",
        // "-fstack-protector"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}